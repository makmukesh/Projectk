<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_rectangle_gray"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:gravity="center"
                    tools:ignore="ContentDescription" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingEnd="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingStart="15dp"
                android:visibility="visible">

               <TextView android:fontFamily="@font/gisha_0"
                    android:id="@+id/txt_productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black" />

               <TextView android:fontFamily="@font/gisha_0"
                    android:id="@+id/txt_productId"
                    style="?android:textAppearanceSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:textColor="@color/color_orange_text"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:ignore="Deprecated" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                   <TextView android:fontFamily="@font/gisha_0"
                        style="?android:textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".3"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:text="Qty."
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        tools:ignore="Deprecated,HardcodedText" />

                   <TextView android:fontFamily="@font/gisha_0"
                        style="?android:textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".1"
                        android:gravity="center_vertical"
                        android:text=":"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />

                   <TextView android:fontFamily="@font/gisha_0"
                        android:id="@+id/txt_productQty"
                        style="?android:textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".6"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        tools:ignore="Deprecated" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                   <TextView android:fontFamily="@font/gisha_0"
                        style="?android:textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".3"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:text="Amount"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        tools:ignore="Deprecated,HardcodedText" />

                   <TextView android:fontFamily="@font/gisha_0"
                        style="?android:textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".1"
                        android:gravity="center_vertical"
                        android:text=":"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />

                   <TextView android:fontFamily="@font/gisha_0"
                        android:id="@+id/txt_productAmount"
                        style="?android:textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".6"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        tools:ignore="Deprecated" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">

                   <TextView android:fontFamily="@font/gisha_0"
                        style="?android:textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".3"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:text="Status"
                        android:textColor="@color/app_color_black"
                        android:textSize="12sp"
                        tools:ignore="Deprecated,HardcodedText" />

                   <TextView android:fontFamily="@font/gisha_0"
                        style="?android:textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".1"
                        android:gravity="center_vertical"
                        android:text=":"
                        android:textColor="@color/app_color_black"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />

                   <TextView android:fontFamily="@font/gisha_0"
                        android:id="@+id/txt_productStatus"
                        style="?android:textAppearanceSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".6"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:textColor="@color/app_color_black"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>