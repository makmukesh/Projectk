                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext_bottom_line"
                        android:digits="@string/alphanumeric"
                        android:fontFamily="@font/gisha_0"
                        android:hint="Proposer  Id *"
                        android:inputType="text"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:minHeight="40dp"
                        android:singleLine="true"
                        android:textSize="13sp"
                        android:visibility="visible"
                        tools:ignore="Deprecated" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/txt_proposer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/gisha_0"
                    android:textColor="@color/colorAccent"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_color_text_grey"
                    android:fontFamily="@font/gisha_0"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/personal_detail"
                    android:textColor="@android:color/black"
                    android:visibility="visible" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="bottom"
                    android:minHeight="52dp"
                    android:visibility="visible">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtxt_name"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext_bottom_line"
                        android:fontFamily="@font/gisha_0"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                        android:hint="Name *"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:minHeight="40dp"
                        android:singleLine="true"
                        android:textSize="13sp"
                        android:visibility="visible"
                        tools:ignore="Deprecated" />
                </android.support.design.widget.TextInputLayout>

                <!--<TextView-->
                <!--android:id="@+id/txt_dob"-->
