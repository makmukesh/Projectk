<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="3dp"
        android:background="@drawable/bg_round_rectangle_gray" >

        <TextView
            android:id="@+id/txt_get_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center|start"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="3dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/sum"
            android:layout_marginRight="80dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/txt_get_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center|start"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:layout_marginRight="80dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="3dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/sum"
            android:layout_below="@+id/txt_get_name"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:id="@+id/sum"
            android:gravity="center"
            >
            <TextView
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_round_button_orange"
                android:gravity="center"
                android:textSize="10dp"
                android:padding="5dp"
                android:text="Request \nContact No"
                android:textColor="@color/app_color_white" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>


